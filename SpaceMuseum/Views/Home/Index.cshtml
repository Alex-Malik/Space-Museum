                        {
                            <div class="col-md-4 col-sm-6">
                                <div id="event-@e.EventID" class="card">
                                    <div class="card-img clickable" 
                                         style="background-image:url(http://www.simpleimage.com/images/logo.jpg);" @*style="background-image:url(@e.Images.FirstOrDefault().URL);"*@>
                                        
                                    </div>
                                </div>
